{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sun-riseup-viewrrr",
  "version": "0.1.0",
  "identifier": "com.sun-riseup-viewrrr.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sun-riseup-viewrrr",
        "width": 1200,
        "height": 1200,
        "decorations": false,
        "dragDropEnabled": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": ["*"],
          "permissions": ["core:window:allow-start-dragging"]
        },
        {
          "identifier": "file-dialog",
          "windows": ["*"],
          "permissions": ["dialog:allow-open", "dialog:default"]
        },
        {
          "identifier": "path-basename",
          "windows": ["*"],
          "permissions": ["core:path:allow-basename", "core:path:default"]
        },
        {
          "identifier": "store-access",
          "windows": ["*"],
          "permissions": [
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
